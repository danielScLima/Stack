RM := rm -rf
TARGET := program
OBJS := stack.o program.o
SRCS := stack.cpp program.cpp

all: $(TARGET)

$(TARGET): $(OBJS) $(SRCS)
	@echo 'Building ' $(TARGET)
	@g++ -o $(TARGET) $(OBJS)
	@echo 'End of build'
	
%.o: %.cpp
	@echo 'Building $@ from $<'
	@g++ -o $@ -c $<
	
clean:
	@echo "cleaning"
	$(RM) $(OBJS) $(TARGET)